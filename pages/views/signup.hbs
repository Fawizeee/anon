<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-image: url("pic/anon.png");
            background-repeat: repeat;
        }

        .container {
            width: 95%;
            height: 90%;
            max-width: 700px;
            max-height: 700px;
            background-color: #524e4e;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
            text-align: center;
            padding-bottom: 100px;
            padding-top: 0%;
            box-shadow: 10px 10px 10px 10px #111;
            min-width: 400px;
            border-radius :15px;;
        }

        #head {
            display: grid;
            place-items: center;
            background-color: #555;
            color: #fff;
            height: 100px;
            width: 100%;
            background-color: #3d3d3d;
            border-radius :15px 15px 0 0;

        }

        h1 {
            color: #fff;
            margin: 0 auto;
        }

        input[type="text"], input[type="password"] {
            width: 80%;
            padding: 12px 20px;
            margin: 8px 0;
            box-sizing: border-box;
            border: 1px solid #666;
            border-radius: 4px;
            height: 100%;
            background-color: #555;
            color: #fff;
        }

        button {
            width: 60%;
            max-width: 250px;
            background-color: #4CAF50;
            color: #fff;
            padding: 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            position: relative;
           
        }

        button:hover {
            background-color: #45a049;
        }

        .form-inp {
            margin:50px auto;
            display: flex;
            justify-content: flex-start;
            width: 90%;
            height: fit-content;
            max-width: 500px;
            border: 5px solid #333;
            border-radius: 10px;
            height: fit-content;
            background-color: #444;
        }

        .form-inp p {
            width: 20%;
            font-weight: bold;
            color: #fff;
            font-size: small;
            margin-top: 20px;
        }

        form {
            width: 100%;
            margin-top: 0;
           
        }

 
        #messgCon {
    margin-top: 20px;
    text-align: center;
    color:antiquewhite;
  }
  
  #messgCon a {
    text-decoration: none;
    color: #4CAF50;
  }
  
  #messgCon a:hover {
    color: #3e8e41;
  }
  #passValid{
    color: aliceblue;
  }
    </style>
</head>
<body>
    <div class="container">
     
        <div id="head">
            <h1        <p>Sign up to start <i class="bi bi-smile"></i></p>
            </h1>
        </div>
        <form method="POST" action="signup">
            <div class="form-inp">
                <p>Username</p>
                <input type="text" id="username" name="name" required>
            </div>
            <div class="form-inp">
                <p>Password</p>
                <input  oninput=passVal(this) type="password" id="password" name="pword" required>
            </div>
            <div id "ValidCon">
                <p id="passValid">Must contain 6 characters which must include alphabets and numbers</p>
            </div>
            <button type="submit">Sign Up</button>
        </form>
        <div id="messgCon">
       
            {{#if message}}
                {{message}}
            {{else}}
         
            {{/if}}
                <p> Already have an account?  <a href="/anon/login">   Login now <i class="bi bi-arrow-right"></i></a></p>
            
        </div>
    </div>
</body>
<script>
    const passwordRegex = /^(?=.*[a-zA-Z])(?=.*[0-9]).{6,}$/;
 let submitButton = document.getElementById("submit");
 
 function passVal(e) {
     var password = e.value;
     if (passwordRegex.test(password)) {
         document.getElementById("passValid").style.color = "#93c094";
         submitButton.disabled = false; // enable the submit button
     } else {
         document.getElementById("passValid").style.color = "red";
         submitButton.disabled = true; // disable the submit button
     }
 }
 
 </script>
</html>