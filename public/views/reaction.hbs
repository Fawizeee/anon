</head>
{{#if message}}
{{#each message}}
	<div class = "messages light dark" id = messages.{{SENDERID}}>
		<div id = logo>
			<img src = /anon/pic/anon.png />
			<div onclick="selectid(this)"  data-msgid={{MSGID}} data-selected=0 ><p> anon message </p></div>
			<p id = id data-user = {{USERID}}  onclick="preview(this,1)"> {{SENDERID}}</p>
		</div> 
	
		<div id = mssgCntnts   data-msgid={{MSGID}} data-user = {{USERID}}  onclick="preview(this,0)" >

			<p>  {{{format MSG}}}</p>
				
			<p id = "time"> {{CTIME}} </p>
      	</div>
        <div class ="reactCon">
		{{#each reactlist}}
			{{#if reacted }}
	 		 <div  id ={{msgid}}{{key}}  class = 'reactions' onclick= reactor(this) data-id ={{msgid}} data-name="{{name}}" data-cuser = "{{uname}}" data-react = {{key}}  data-reacted = 'true'  > 
				<i class ="{{fa}}"style="color:{{keyclr}};"></i>
				<p> {{length}}</p> 
				
		     </div>	
				{{else}}
			 <div  id ={{msgid}}{{key}}  class = 'reactions' onclick= reactor(this) data-id ={{msgid}} data-name= {{name}} data-cuser = {{uname}} data-react = {{key}}  data-reacted = 'false'  >
				<i class ="{{fa}}" style="color:white;"></i>
				
					<p> {{length}}</p>
					
			 </div>
								
			{{/if}}
		{{/each}}
      </div>
 </div>
 

{{/each}}
{{#if isUser}}
<div onclick="saveSelected()" style="border:2px solid black;" id = "saveselected"> done</div>
{{/if}}
<script   src = "public/js/preview.js"></script>
{{/if}}

